  pod 'Firebase/Database'
  pod 'Firebase/Storage'
  pod 'Firebase/Invites'

  target 'PillowTalkTests' do
    inherit! :search_paths
    # Pods for testing
  end

  target 'PillowTalkUITests' do
    inherit! :search_paths
    # Pods for testing
  end

end
